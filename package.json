{
  "name": "promptly",
  "version": "0.0.1",
  "private": true,
  "description": "A customizable ChatGPT API interface for OpenAPI models.",
  "main": "index.js",
  "scripts": {
    "intro": "cat package.json | jq .scripts",
    "copy-materialize": "copyfiles -u 4 node_modules/materialize-css/dist/css/materialize.min.css promptly/static/css && copyfiles -u 4 node_modules/materialize-css/dist/js/materialize.min.js promptly/static/js",
    "sass": "node-sass --output-style expanded promptly/static/scss/ -o promptly/static/css/",
    "doc:img": "drawio docs/database.drawio -o docs/_static/database.png",
    "postinstall": "npm run copy-materialize",
    "postupdate": "npm run copy-materialize"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeyklay/promptly.git"
  },
  "keywords": [
    "ai",
    "chat",
    "chatbot",
    "chatgpt",
    "gpt",
    "gpt-3",
    "gpt-4",
    "llm",
    "openai",
    "prompt injection",
    "prompt",
    "text generation"
  ],
  "author": "Serghei Iakovlev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sergeyklay/promptly/issues"
  },
  "homepage": "https://promptly.readthedocs.io/en/latest/",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "draw.io-export": "^0.3.0",
    "node-sass": "^9.0.0"
  }
}
