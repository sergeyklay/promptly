                 ;; Use spaces instead of tabs
((python-mode . ((indent-tabs-mode . nil)
                 ;; Set tab width to 4 spaces
                 (tab-width . 4)
                 ;; Set fill column to 79 chars as per PEP 8
                 (fill-column . 79)
                 ;; Set python indentation to 4 spaces
                 (python-indent-offset . 4))))
